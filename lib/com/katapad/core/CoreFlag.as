package com.katapad.core 
{
	/**
	 * 複数のFlagをuintで持つ基底クラス
	 * @author katpaad
	 * @version 0.1
	 * @since 2009/01/22 20:18
	 */
	public class CoreFlag 
	{
		//----------------------------------
		//  static var/const
		//----------------------------------
		
		//----------------------------------
		//  instance var 
		//----------------------------------
		protected var _flag:uint;
		
		/**
		 * コンストラクタ
		 */
		public function CoreFlag() 
		{
			init();
		}
		
		/**
		 * 初期化
		 */
		protected function init():void 
		{
			_flag = 0;
		}
		
		public function check(flag:uint):Boolean
		{
			if (flag == 0)
				return _flag == 0
			return (_flag & flag) != 0;
		}
		
		public function on(flag:uint):void
		{
			_flag |= flag;
		}
		
		public function off(flag:uint):void
		{
			_flag &= ~flag;
		}
		
		public function reset():void
		{
			_flag = 0;
		}
		
		public function toString():String
		{
			return "[CoreFlag, " + _flag.toString(2) + "]";
		}
		
