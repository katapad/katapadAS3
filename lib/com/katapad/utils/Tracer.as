package com.katapad.utils 
{
	import flash.errors.IllegalOperationError;
	/**
	 * Traceするだけのクラス
	 * @author katapad
	 * @version 0.1
	 * @since 2009/01/23 17:11
	 */
	public class Tracer 
	{
		//----------------------------------
		//  static var/const
		//----------------------------------
		
		//----------------------------------
		//  instance var 
		//----------------------------------
		
		/**
		 * コンストラクタ
		 */
		public function Tracer() 
		{
			throw new IllegalOperationError("cannot construct");
		}
		
		//--------------------------------------------------------------------------
		//
		//  OVERRIDE
		//
		//--------------------------------------------------------------------------
		
		//--------------------------------------------------------------------------
		//
		//  PUBLIC
		//
		//--------------------------------------------------------------------------
		public static function log(...args):void
		{
			if (args[0] == undefined)
				return;
			for each(var obj:Object in args) 
			{
				trace( "Tracer : " + obj );
			}
		}
		
		//--------------------------------------------------------------------------
		//
		//  PROTECTED
		//
		//--------------------------------------------------------------------------
		
		//--------------------------------------------------------------------------
		//
		//  EVENT HANDLER
		//
		//--------------------------------------------------------------------------
		
		//--------------------------------------------------------------------------
		//
		//  PRIVATE
		//
		//--------------------------------------------------------------------------
		
		//--------------------------------------------------------------------------
		//
		//  GETTER/SETTER
		//
		//--------------------------------------------------------------------------
	
	}
	
}
